{
  "manifest_version": 3,
  "name": "Google 书签管理器",
  "version": "1.0.0",
  "description": "一个功能强大的Chrome书签管理工具，支持智能整理、搜索和导入导出功能",
  "permissions": [
    "bookmarks",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Google 书签管理器",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["css/*", "js/*"],
      "matches": ["<all_urls>"]
    }
  ]
}